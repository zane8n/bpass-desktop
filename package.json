{
  "name": "bpass_desktop",
  "version": "1.0.0",
  "author": "Key6",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "antd": "^4.16.13",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "dom-to-image": "^2.6.0",
    "electron-is-dev": "^2.0.0",
    "file-saver": "1.3.3",
    "firebase": "^9.1.1",
    "html-to-image": "^1.8.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-qr-code": "^2.0.2",
    "react-qr-reader-es6": "^2.2.1-2",
    "react-scripts": "4.0.3",
    "shortid": "^2.2.16",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1"
  },
  "build": {
    "appId": "com.bpass.ben_key6",
    "productName": "bpass transport management",
    "files": [
      "dist**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "build/favicon.ico"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "copyright": "Copyright ©2021 @key6",
    "target": "NSIS",
    "nsis": {
      "oneClick": true,
      "shortcutName": "bpass-desktop"
    }
  },
  "icon": "build/favicon.ico",
  "description": "L'intention de cette application est de faciliter la gestion des transports publics dans notre région",
  "main": "public/main.js",
  "homepage": "./*",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:server": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
    "electron:build": "yarn build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^15.1.2",
    "electron-builder": "^22.13.1"
  },
  "license": "MIT",
  "publisherName": "Zane8n"
}
